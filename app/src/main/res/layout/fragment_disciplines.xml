<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/disciplines_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        app:tabGravity="center"
        app:tabPaddingEnd="@dimen/spacing_twenty_four"
        app:tabPaddingStart="@dimen/spacing_twenty_four"
        app:tabSelectedTextColor="@color/light_purple"
        app:tabTextAppearance="@style/Disciplines.Tab"
        app:tabTextColor="@color/light_purple_fifty" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/disciplines_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</androidx.appcompat.widget.LinearLayoutCompat>
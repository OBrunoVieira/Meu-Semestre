<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:cardBackgroundColor="@color/light_blue"
    tools:parentTag="androidx.cardview.widget.CardView">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/grade_highlight_vertical_image_view_wave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/vector_wave_right"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <com.doubleb.meusemestre.ui.views.GradeVariationView
            android:id="@+id/grade_highlight_vertical_grade_variation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_sixteen"
            android:layout_marginTop="@dimen/spacing_twenty_four"
            android:layout_marginEnd="@dimen/spacing_sixteen"
            app:layout_constraintBottom_toTopOf="@id/grade_highlight_vertical_image_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/grade_highlight_vertical_image_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_eight"
            android:maxHeight="@dimen/min_grade_highlight_size"
            android:minHeight="@dimen/min_grade_highlight_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</merge>
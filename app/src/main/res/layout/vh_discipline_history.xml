<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/discipline_history_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shadow_card"
    android:backgroundTint="@color/dark_purple"
    android:minHeight="@dimen/spacing_eighty_eight"
    android:padding="@dimen/spacing_twenty_four">

    <com.doubleb.meusemestre.ui.views.CircleChartView
        android:id="@+id/discipline_history_circle_chart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/discipline_history_textview_name"
        style="@style/DisciplineHistory.TextView.Name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/discipline_history_textview_status"
        app:layout_constraintEnd_toStartOf="@id/discipline_history_circle_chart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="Química Inorgânica" />

    <TextView
        android:id="@+id/discipline_history_textview_status"
        style="@style/DisciplineHistory.TextView.Status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/discipline_history_circle_chart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/discipline_history_textview_name"
        tools:text="Aprovado" />
</androidx.constraintlayout.widget.ConstraintLayout>

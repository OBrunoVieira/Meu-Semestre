<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/zircon</item>
    </style>

    <style name="Base.TextView" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/zircon</item>
        <item name="android:textSize">@dimen/text_size_sixteen</item>
    </style>

    <style name="Base.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:minHeight">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">@dimen/spacing_eight</item>
        <item name="android:padding">@dimen/spacing_sixteen</item>
    </style>

    <!--  Font/Mulish  -->
    <style name="Base.TextView.Mulish.SemiBold" parent="Base.TextView">
        <item name="android:fontFamily">@font/mulish_semi_bold</item>
    </style>

    <style name="Base.TextView.Mulish.Bold" parent="Base.TextView">
        <item name="android:fontFamily">@font/mulish_bold</item>
    </style>

    <!--  Font/Inter  -->
    <style name="Base.TextView.Inter.Light" parent="Base.TextView">
        <item name="android:fontFamily">@font/inter_light</item>
    </style>

    <style name="Base.TextView.Inter.Medium" parent="Base.TextView">
        <item name="android:fontFamily">@font/inter_medium</item>
    </style>

    <style name="Base.TextView.Inter.Regular" parent="Base.TextView">
        <item name="android:fontFamily">@font/inter_regular</item>
    </style>

    <style name="Base.TextView.Inter.SemiBold" parent="Base.TextView">
        <item name="android:fontFamily">@font/inter_semi_bold</item>
    </style>

    <style name="Base.Button.Inter.SemiBold" parent="Base.Button">
        <item name="android:fontFamily">@font/inter_semi_bold</item>
    </style>

    <!--  Activity/Welcome  -->
    <style name="Welcome.Button.Explore" parent="Base.Button.Inter.SemiBold">
        <item name="android:textSize">@dimen/text_size_fourteen</item>
        <item name="android:textColor">@color/zircon</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/welcome_button_explore</item>
        <item name="backgroundTint">@color/light_purple</item>
        <item name="android:layout_marginTop">@dimen/spacing_twenty</item>
    </style>

    <style name="Welcome.Button.Login" parent="Base.Button.Inter.SemiBold">
        <item name="android:textSize">@dimen/text_size_fourteen</item>
        <item name="android:textColor">@color/light_purple</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:theme">@style/Theme.MaterialComponents</item>
        <item name="android:text">@string/welcome_button_login</item>
        <item name="android:backgroundTint">@color/zircon</item>
        <item name="strokeColor">@color/light_purple</item>
        <item name="strokeWidth">@dimen/spacing_one</item>
        <item name="android:layout_marginTop">@dimen/spacing_sixteen</item>
    </style>

    <!--  Fragment/Dashboard  -->
    <style name="Dashboard.TextView.Title" parent="Base.TextView.Mulish.Bold">
        <item name="android:textSize">@dimen/text_size_twenty_eight</item>
        <item name="android:textColor">@color/blue_zodiac</item>
        <item name="android:text">@string/dashboard_title</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Dashboard.TextView.CR" parent="Base.TextView.Inter.Medium">
        <item name="android:textSize">@dimen/spacing_eight</item>
        <item name="android:minWidth">@dimen/min_dashboard_cr_width</item>
        <item name="android:textColor">@color/zircon</item>
        <item name="android:background">@drawable/shape_cr</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/spacing_four</item>
        <item name="android:text">@string/dashboard_cr</item>
    </style>

    <!--  Fragment/Welcome Info  -->
    <style name="WelcomeInfo.TextView.Title" parent="Base.TextView.Mulish.Bold">
        <item name="android:textSize">@dimen/text_size_twenty</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/spacing_thirty_two</item>
    </style>

    <style name="WelcomeInfo.TextView.Description" parent="Base.TextView.Inter.Light">
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/spacing_eight</item>
    </style>

    <!--  VH/Discipline  -->
    <style name="Discipline.TextView.Title" parent="Base.TextView.Mulish.SemiBold">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
        <item name="android:layout_marginStart">@dimen/spacing_sixteen</item>
        <item name="android:layout_marginEnd">@dimen/spacing_sixteen</item>
        <item name="android:layout_marginTop">@dimen/spacing_twenty_four</item>
        <item name="android:layout_marginBottom">@dimen/spacing_eight</item>
    </style>

    <style name="Discipline.TextView.Average" parent="Base.TextView.Inter.Regular">
        <item name="android:textSize">@dimen/text_size_twelve</item>
        <item name="android:layout_marginStart">@dimen/spacing_sixteen</item>
        <item name="android:layout_marginEnd">@dimen/spacing_sixteen</item>
        <item name="android:layout_marginBottom">@dimen/spacing_eight</item>
    </style>

    <style name="Discipline.Progress.Average" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/shape_progress</item>
        <item name="android:layout_marginStart">@dimen/spacing_sixteen</item>
        <item name="android:layout_marginEnd">@dimen/spacing_sixteen</item>
        <item name="android:layout_marginBottom">@dimen/spacing_two</item>
    </style>

    <style name="Discipline.ImageView.Wave" parent="">
        <item name="android:importantForAccessibility">no</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <!--  VH/Best Discipline  -->
    <style name="BestDiscipline.TextView.Title" parent="Base.TextView.Inter.Light">
        <item name="android:text">@string/best_discipline_title</item>
        <item name="android:textSize">@dimen/text_size_twelve</item>
        <item name="android:layout_marginStart">@dimen/spacing_sixteen</item>
    </style>

    <style name="BestDiscipline.TextView.Name" parent="Base.TextView.Mulish.SemiBold">
        <item name="android:layout_marginTop">@dimen/spacing_four</item>
        <item name="android:layout_marginStart">@dimen/spacing_sixteen</item>
        <item name="android:textSize">@dimen/text_size_eighteen</item>
    </style>

    <!--  VH/Restricted Discipline List  -->
    <style name="RestrictedDisciplineList.TextView.Title" parent="Base.TextView.Mulish.SemiBold">
        <item name="android:text">@string/restricted_discipline_title</item>
        <item name="android:textSize">@dimen/text_size_eighteen</item>
        <item name="android:textColor">@color/blue_zodiac</item>
        <item name="android:layout_marginStart">@dimen/spacing_sixteen</item>
    </style>

    <!--  VH/Restricted Discipline  -->
    <style name="RestrictedDiscipline.TextView.Title" parent="Base.TextView.Inter.Medium">
        <item name="android:textSize">@dimen/text_size_eighteen</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:layout_marginEnd">@dimen/spacing_sixteen</item>
    </style>

    <style name="RestrictedDiscipline.TextView.Info" parent="Base.TextView.Inter.Light">
        <item name="android:textSize">@dimen/text_size_fourteen</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:layout_marginTop">@dimen/spacing_eight</item>
        <item name="android:layout_marginEnd">@dimen/spacing_sixteen</item>
    </style>

    <!--  VH/Register Grades  -->
    <style name="RegisterGrades.TextView.Title" parent="Base.TextView.Mulish.SemiBold">
        <item name="android:textSize">@dimen/text_size_eighteen</item>
        <item name="android:textColor">@color/blue_zodiac</item>
        <item name="android:text">@string/register_grades_title</item>
        <item name="android:layout_marginStart">@dimen/spacing_sixteen</item>
    </style>

    <style name="RegisterGrades.TextView.Description" parent="Base.TextView.Inter.Light">
        <item name="android:textSize">@dimen/text_size_fourteen</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/register_grades_description</item>
        <item name="android:layout_marginTop">@dimen/spacing_twenty_four</item>
    </style>

    <style name="RegisterGrades.Button" parent="Base.Button.Inter.SemiBold">
        <item name="android:textSize">@dimen/text_size_fourteen</item>
        <item name="android:textColor">@color/zircon</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/register_grades_action</item>
        <item name="android:layout_marginTop">@dimen/spacing_twenty_four</item>
        <item name="backgroundTint">@color/light_purple</item>
    </style>

    <!--  VH/Finish Semester  -->
    <style name="FinishSemester.Button" parent="Base.Button.Inter.SemiBold">
        <item name="android:textSize">@dimen/text_size_fourteen</item>
        <item name="android:textColor">@color/light_purple</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:theme">@style/Theme.MaterialComponents</item>
        <item name="android:text">@string/finish_semester_action</item>
        <item name="android:layout_marginTop">@dimen/spacing_thirty_two</item>
        <item name="android:layout_marginStart">@dimen/spacing_sixteen</item>
        <item name="android:layout_marginEnd">@dimen/spacing_sixteen</item>
        <item name="android:backgroundTint">@color/zircon</item>
        <item name="strokeColor">@color/light_purple</item>
        <item name="strokeWidth">@dimen/spacing_one</item>
    </style>

    <!--  VH/Grade Highlight  -->
    <style name="GradeHighlight.TextView.Title" parent="Base.TextView.Mulish.SemiBold">
        <item name="android:textSize">@dimen/text_size_eighteen</item>
        <item name="android:textColor">@color/blue_zodiac</item>
        <item name="android:text">@string/grade_highlight_title</item>
        <item name="android:layout_marginStart">@dimen/spacing_sixteen</item>
    </style>

    <!--  View/Grade Variation  -->
    <style name="GradeVariation.TextView.Title" parent="Base.TextView.Mulish.SemiBold">
        <item name="android:textColor">@color/zircon</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="GradeVariation.TextView.Grade" parent="Base.TextView.Inter.SemiBold">
        <item name="android:textColor">@color/zircon</item>
        <item name="android:textSize">@dimen/text_size_forty</item>
        <item name="android:layout_marginTop">@dimen/spacing_twenty_four</item>
    </style>

    <style name="GradeVariation.TextView.Variation" parent="Base.TextView.Inter.SemiBold">
        <item name="android:textColor">@color/zircon</item>
        <item name="android:textSize">@dimen/spacing_twelve</item>
        <item name="android:padding">@dimen/spacing_four</item>
        <item name="android:drawablePadding">@dimen/spacing_four</item>
        <item name="android:background">@drawable/shape_variation</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:layout_marginStart">@dimen/spacing_eight</item>
        <item name="android:layout_marginBottom">@dimen/spacing_twelve</item>
    </style>

    <!--  View/Button Selection  -->
    <style name="ButtonSelection.TextView.Action" parent="Base.TextView.Inter.Regular">
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:textSize">@dimen/spacing_twelve</item>
        <item name="android:layout_marginStart">@dimen/spacing_four</item>
    </style>
</resources>